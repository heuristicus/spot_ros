<launch>
    <!-- Change this for namespacing. -->
    <arg name="robot_name" default="/"/>

    <!-- Set to true to run rviz in parallel. -->
    <arg name="rviz" default="false"/>

    <!-- Set to true if you're using CHAMP lite version. Only useful for microcontrollers. -->
    <arg name="lite" default="false" />

    <!-- Path to ROS Control configurations. Do not touch. -->
    <arg name="ros_control_file" default="$(find spot_champ_config)/config/ros_control/ros_control.yaml" />

    <!-- Path to Gazebo world you want to load. -->
    <arg name="gazebo_world" default="$(find spot_champ_config)/worlds/outdoor.world" />

    <!-- X Initial position of the robot in Gazebo World -->
    <arg name="world_init_x" default="0.0" />

    <!-- Y Initial position of the robot in Gazebo World -->
    <arg name="world_init_y" default="0.0" />

    <!-- Initial heading of the robot in Gazebo World -->
    <arg name="world_init_heading" default="0.0" />

    <param name="use_sim_time" value="true" />

    <include file="$(find spot_champ_config)/launch/bringup.launch">
        <arg name="robot_name" value="$(arg robot_name)"/>
        <arg name="gazebo" value="true"/>
        <arg name="lite" value="$(arg lite)"/>
        <arg name="rviz" value="$(arg rviz)"/>
        <arg name="joint_controller_topic" value="joint_group_position_controller/command"/>
        <arg name="hardware_connected" value="false"/>
        <arg name="publish_foot_contacts" value="false"/>
        <arg name="close_loop_odom" value="true"/>
    </include>

    <include file="$(find champ_gazebo)/launch/spawn_robot.launch">
        <arg name="robot_name" value="$(arg robot_name)"/>
        <arg name="lite" value="$(arg lite)"/>
        <arg name="ros_control_file" value="$(arg ros_control_file)"/>
        <arg name="world_init_x" value="$(arg world_init_x)" />
        <arg name="world_init_y" value="$(arg world_init_y)" />
        <arg name="world_init_heading" value="$(arg world_init_heading)" />
    </include>
</launch>